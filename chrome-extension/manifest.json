{
  "manifest_version": 3,
  "name": "Coding Test PR Assistant",
  "version": "0.1.0",
  "description": "BOJ/Programmers 정답 제출을 감지해 GitHub Pull Request를 자동 생성합니다.",
  "permissions": ["storage", "tabs", "activeTab"],
  "host_permissions": [
    "https://api.github.com/*",
    "https://www.acmicpc.net/*",
    "https://school.programmers.co.kr/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Coding Test PR Assistant",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["https://www.acmicpc.net/source/*"],
      "js": ["content/boj-source.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://school.programmers.co.kr/learn/courses/*/lessons/*"],
      "js": ["content/programmers-lesson.js"],
      "run_at": "document_idle"
    }
  ]
}
